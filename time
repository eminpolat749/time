#define _CRT_SECURE_NO_WARNINGS
#include<iostream>
#include<ctime>
#include<iomanip>
void process_entry_date(int day = -1, int mon = -1, int year = -1);
void process_entry_date(int day, int mon, int year)
{
	if (year == -1) {
		std::time_t timer;
		time(&timer);
		struct tm* ptr = localtime(&timer);
		//auto ptr = localtime(&timer);
		year = ptr->tm_year + 1900;
		if (mon == -1) {
			mon = ptr->tm_mon + 1;
			if (day == -1) {
				day = ptr->tm_mday;
			}
		}
	}
	std::cout << std::setfill('0');
	std::cout << std::setw(2) << day << "-" << std::setw(2) << mon << "-" << year << "\n";
}
int main()
{
	process_entry_date();
	process_entry_date(9);
	process_entry_date(2,11);
	process_entry_date(5,7,1999);
}
